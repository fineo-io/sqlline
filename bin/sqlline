#!/bin/bash
# sqlline - Script to launch SQL shell on Unix, Linux or Mac OS
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
DEBUG_OPTS=${DEBUG_OPTS:-"-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=5005"}
if [ "x$DEBUG" != "x" ]; then
  DEBUG=$DEBUG_OPTS
fi

# Only skip setting up color if the flag is set (e.g. on windows + cygwin)
if [ "${NO_SQLLINE_COLOR}z" = "z" ]; then
 WITH_COLOR="--color=true"
fi

OPTS=${SQL_LINE_SYS_OPTIONS:-"-Dsqlline.Isolation=TRANSACTION_NONE"}
exec java -cp "$DIR/lib/*" $OPTS $DEBUG sqlline.SqlLine ${WITH_COLOR} "$@"

# End sqlline
